<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Rust Workshop!</title>
	<script>
		setTimeout(function(){
   			window.location.reload(1);
		}, 1000);
	</script>
	<link rel="stylesheet" href="/css/milligram.min.css">
  </head>
  <body>
	<div class="row">
      <div class="column"></div>
      <div class="column">
		<h1>Recent</h1>
    	<ul>
      		{{#each recent_answers}}
        	<li>{{this.team_name}} answered problem number {{this.qn_num}}!</li>
      		{{/each}}
    	</ul>
      </div>
      <div class="column">
    	<h1>Top</h1>
    	<ul>
      		{{#each top_scores}}
        	<li>{{this.team_name}} has scored {{this.total_score}} marks!</li>
      		{{/each}}
    	</ul>
      </div>
      <div class="column"></div>
    </div>
  </body>
</html>
